<odoo>
    <record id="view_restaurant_tables_form" model="ir.ui.view">
        <field name="name">restaurant.tables.form</field>
        <field name="model">restaurant.tables</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="capacity" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_restaurant_tables_tree" model="ir.ui.view">
        <field name="name">restaurant.tables.tree</field>
        <field name="model">restaurant.tables</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="capacity" />
            </tree>
        </field>
    </record>
</odoo>