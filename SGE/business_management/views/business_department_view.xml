<odoo>
    <record id="view_business_departments_form" model="ir.ui.view">
        <field name="name">business.departments.form</field>
        <field name="model">business.departments</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="average_salary" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_departments_tree" model="ir.ui.view">
        <field name="name">business.departments.tree</field>
        <field name="model">business.departments</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="average_salary" />
            </tree>
        </field>
    </record>
</odoo>