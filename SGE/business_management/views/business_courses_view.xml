<odoo>
    <record id="view_business_courses_form" model="ir.ui.view">
        <field name="name">business.courses.form</field>
        <field name="model">business.courses</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_courses_tree" model="ir.ui.view">
        <field name="name">business.courses.tree</field>
        <field name="model">business.courses</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
</odoo>