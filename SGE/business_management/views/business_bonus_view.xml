<odoo>
    <record id="view_business_bonus_form" model="ir.ui.view">
        <field name="name">business.bonus.form</field>
        <field name="model">business.bonus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="monthly_salary" />
                        <field name="bonus" />
                        <field name="final_bonus" />
                        <field name="remarks" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_bonus_tree" model="ir.ui.view">
        <field name="name">business.bonus.tree</field>
        <field name="model">business.bonus</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="name" />
                        <field name="monthly_salary" />
                        <field name="bonus" />
                        <field name="final_bonus" />
            </tree>
        </field>
    </record>
</odoo>