<odoo>
    <record id="view_business_employees_form" model="ir.ui.view">
        <field name="name">business.employees.form</field>
        <field name="model">business.employees</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="salary" />
                        <field name="department_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_employees_tree" model="ir.ui.view">
        <field name="name">business.employees.tree</field>
        <field name="model">business.employees</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="salary" />
                <field name="department_id" />
            </tree>
        </field>
    </record>
</odoo>