<odoo>
    <record id="view_business_sessions_form" model="ir.ui.view">
        <field name="name">business.sessions.form</field>
        <field name="model">business.sessions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="course" />
                        <field name="trainer" />
                        <field name="training_date" />
                        <field name="duration" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_sessions_tree" model="ir.ui.view">
        <field name="name">business.sessions.tree</field>
        <field name="model">business.sessions</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="course" />
                <field name="trainer" />
                <field name="training_date" />
                <field name="duration" />
                <field name="status" />
            </tree>
        </field>
    </record>
</odoo>