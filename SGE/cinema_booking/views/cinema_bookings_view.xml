<odoo>
    <record id="view_cinema_booking_form" model="ir.ui.view">
        <field name="name">cinema.booking.form</field>
        <field name="model">cinema.booking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="seat_id" />
                        <field name="booking_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cinema_booking_tree" model="ir.ui.view">
        <field name="name">cinema.booking.tree</field>
        <field name="model">cinema.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="seat_id" />
                <field name="booking_date" />
            </tree>
        </field>
    </record>
</odoo>